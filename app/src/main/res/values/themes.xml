<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeftLovers" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/primary_link</item>
        <item name="colorOnSecondary">@color/text_main</item>
        <item name="colorError">@color/error</item>

        <!-- Bottom App Bar -->
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>

    </style>
    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundColor">@color/primary_main</item>
    </style>
    <!--<style name="Widget.Material3.BottomNavigationView.CustomAppBar">
        <item name="backgroundColor">@color/primary_main</item>
    </style>-->
</resources>