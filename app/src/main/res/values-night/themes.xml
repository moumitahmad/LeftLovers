<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeftLovers" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/primary_link</item>
        <item name="colorOnSecondary">@color/text_main</item>
        <item name="colorError">@color/error</item>
        <!-- Status bar color. -->
        <item name="android:textAppearance" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>